{
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "target": "ES2016",
    "lib": ["es6"],
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"]
    }
  },
  "include": [
    "src/**/*", "*.ts"
  ],
  "exclude": ["node_modules"]
}